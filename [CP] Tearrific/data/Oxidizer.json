        // Add Oxidizer Big Craftable
        {
            "LogName": "Oxidizer Big Craftable",
            "Action": "EditData",
            "Target": "Data/BigCraftables",
            "Entries": {
                "{{ModId}}_Oxidizer": {
                    "Name": "{{ModId}}_Oxidizer",
                    "DisplayName": "{{i18n:Oxidizer.Name}}",
                    "Description": "{{i18n:Oxidizer.Description}}",
                    "Price": 50,
                    "Fragility": 0,
                    "CanBePlacedOutdoors": true,
